---
const services = [
  {
    category: "Heating and Cooling",
    items: [
      "Furnace Repair in Berks County",
      "Heating System Installation",
      "Air Conditioning Repair",
      "Air Conditioning Installation",
      "HVAC Maintenance"
    ]
  },
  {
    category: "Specialized HVAC",
    items: [
      "Ductless HVAC Systems",
      "Geothermal Heating",
      "HVAC Zoning Systems",
      "Smart Thermostats",
      "Indoor Air Quality Solutions"
    ]
  },
  {
    category: "Commercial HVAC",
    items: [
      "System Design and Installation",
      "Regular Maintenance Plans",
      "Emergency HVAC Repair",
      "Energy Efficiency Solutions",
      "Commercial Air Quality"
    ]
  }
];
---

<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Our Services</h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(category => (
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">{category.category}</h3>
          <ul class="space-y-2">
            {category.items.map(item => (
              <li class="flex items-center text-gray-600">
                <svg class="h-5 w-5 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                {item}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
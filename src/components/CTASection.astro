---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonLink: string;
}

const { title, description, buttonText, buttonLink } = Astro.props;
---

<div class="bg-primary py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
        {title}
      </h2>
      <p class="mt-4 text-xl text-gray-100">
        {description}
      </p>
      <div class="mt-8">
        <a href={buttonLink} class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary bg-white hover:bg-gray-50">
          {buttonText}
        </a>
      </div>
    </div>
  </div>
</div>
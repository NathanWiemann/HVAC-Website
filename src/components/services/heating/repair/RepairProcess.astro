---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const steps = [
  {
    title: "Initial Assessment",
    description: "We start with a thorough inspection of your heating system to identify the root cause."
  },
  {
    title: "Transparent Pricing",
    description: "Before any work begins, we provide a detailed quote with no hidden fees."
  },
  {
    title: "Expert Repairs",
    description: "Our technicians use high-quality tools and parts to restore your system's performance."
  },
  {
    title: "System Testing",
    description: "We test your system to ensure it's running efficiently and safely."
  },
  {
    title: "Ongoing Support",
    description: "We're here to answer questions and provide maintenance tips to prevent future issues."
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Heating Repair Process</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Heating Repair Process" class="w-full h-64 object-cover" />
    </div>
  )}
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {steps.map((step, index) => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="text-primary text-2xl font-bold mb-3">Step {index + 1}</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{step.title}</h3>
        <p class="text-gray-600">{step.description}</p>
      </div>
    ))}
  </div>
</section>
---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const steps = [
  {
    title: "Initial Assessment",
    description: "Comprehensive inspection of your heat pump system"
  },
  {
    title: "Custom Solutions",
    description: "Tailored recommendations for your specific needs"
  },
  {
    title: "Professional Service",
    description: "Expert installation, repair, or maintenance"
  },
  {
    title: "System Testing",
    description: "Thorough testing to ensure optimal performance"
  },
  {
    title: "Ongoing Support",
    description: "Continued assistance and maintenance tips"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Heat Pump Service Process</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Heat Pump Service Process" class="w-full h-64 object-cover" />
    </div>
  )}
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {steps.map((step, index) => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="text-primary text-2xl font-bold mb-3">Step {index + 1}</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{step.title}</h3>
        <p class="text-gray-600">{step.description}</p>
      </div>
    ))}
  </div>
</section>
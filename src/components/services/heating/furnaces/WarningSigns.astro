---
const signs = [
  {
    title: "No Heat or Inconsistent Heating",
    description: "Your furnace isn't providing adequate warmth"
  },
  {
    title: "Unusual Noises",
    description: "Banging, rattling, or whistling sounds indicate mechanical issues"
  },
  {
    title: "High Energy Bills",
    description: "An inefficient furnace uses more energy, increasing utility costs"
  },
  {
    title: "Frequent Cycling",
    description: "System turns on and off frequently, indicating thermostat or airflow issues"
  },
  {
    title: "Unpleasant Odors",
    description: "Strange smells could indicate gas leaks, dirt buildup, or other problems"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Signs You Need Furnace Services</h2>
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {signs.map(sign => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{sign.title}</h3>
        <p class="text-gray-600">{sign.description}</p>
      </div>
    ))}
  </div>
</section>
---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const services = [
  {
    title: "Furnace Installation",
    description: "Expert installation of traditional gas or electric furnaces for reliable warmth."
  },
  {
    title: "Heater Installation",
    description: "Professional installation of all types of heating units for homes and businesses."
  },
  {
    title: "Central Heating Installation",
    description: "Perfect for whole-home heating with consistent temperature control."
  },
  {
    title: "Ductless Heating System Installation",
    description: "Flexible solutions for spaces without traditional ductwork."
  },
  {
    title: "Heat Pump Installation",
    description: "Energy-efficient heating and cooling in one convenient system."
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Heating Installation Services</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Heating Installation Services" class="w-full h-64 object-cover" />
    </div>
  )}

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {services.map(service => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
        <p class="text-gray-600">{service.description}</p>
      </div>
    ))}
  </div>
</section>
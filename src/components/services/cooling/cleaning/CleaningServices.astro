---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const services = [
  {
    title: "AC Coil Cleaning",
    description: "Cleaning the evaporator and condenser coils to improve heat transfer and efficiency."
  },
  {
    title: "Air Duct Cleaning",
    description: "Removing dust, dirt, and debris from ducts to improve airflow and air quality."
  },
  {
    title: "Filter Cleaning",
    description: "Replacing or cleaning filters to maintain proper airflow and reduce allergens."
  },
  {
    title: "Condenser Cleaning",
    description: "Clearing debris and buildup from the condenser unit for optimal cooling."
  },
  {
    title: "Unit Cleaning",
    description: "A full cleaning of your outdoor and indoor units to keep them running smoothly."
  },
  {
    title: "HVAC Coil Cleaning",
    description: "Ensuring your HVAC system operates efficiently by cleaning critical components."
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">What's Included in Our Air Conditioning Cleaning Services</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Professional AC Cleaning" class="w-full h-64 object-cover" />
    </div>
  )}

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {services.map(service => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
        <p class="text-gray-600">{service.description}</p>
      </div>
    ))}
  </div>
</section>
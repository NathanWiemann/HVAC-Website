---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const services = [
  {
    title: "Home AC Cleaning",
    description: "Tailored services to ensure your system delivers clean, cool air."
  },
  {
    title: "AC Sanitizing",
    description: "Removing bacteria and mold for fresher, healthier air."
  },
  {
    title: "AC Vent Cleaning",
    description: "Clearing vents to improve airflow and system efficiency."
  },
  {
    title: "Deep Cleaning",
    description: "Comprehensive cleaning of all system components for optimal performance."
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Residential Air Conditioning Cleaning Services</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Residential AC Cleaning" class="w-full h-64 object-cover" />
    </div>
  )}

  <div class="grid md:grid-cols-2 gap-6">
    {services.map(service => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
        <p class="text-gray-600">{service.description}</p>
      </div>
    ))}
  </div>
</section>
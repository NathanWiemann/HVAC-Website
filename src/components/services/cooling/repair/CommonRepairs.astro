---
const commonIssues = [
  {
    problem: "AC Not Cooling",
    solutions: ["Refrigerant level check", "Thermostat calibration", "Air filter replacement"]
  },
  {
    problem: "Strange Noises",
    solutions: ["Fan blade inspection", "Motor lubrication", "Belt replacement"]
  },
  {
    problem: "High Energy Bills",
    solutions: ["System efficiency check", "Duct inspection", "Thermostat programming"]
  },
  {
    problem: "Water Leaks",
    solutions: ["Drain line cleaning", "Condensate pump check", "Pan inspection"]
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Common AC Problems We Fix</h2>
  <div class="grid md:grid-cols-2 gap-6">
    {commonIssues.map(issue => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{issue.problem}</h3>
        <ul class="space-y-2">
          {issue.solutions.map(solution => (
            <li class="flex items-center text-gray-600">
              <svg class="h-5 w-5 text-primary mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {solution}
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
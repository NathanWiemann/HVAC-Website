---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const services = [
  {
    title: "Residential Mini-Split Cleaning",
    description: "Comprehensive cleaning services for home mini-split systems"
  },
  {
    title: "Commercial Mini-Split Cleaning",
    description: "Professional cleaning for business HVAC systems"
  },
  {
    title: "Mini-Split Coil Cleaning",
    description: "Deep cleaning of indoor and outdoor coils"
  },
  {
    title: "Mini-Split Sanitizing",
    description: "Complete system sanitization for improved air quality"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Mini-Split Cleaning Services</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Mini-Split Cleaning Services" class="w-full h-64 object-cover" />
    </div>
  )}

  <div class="grid md:grid-cols-2 gap-6">
    {services.map(service => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
        <p class="text-gray-600">{service.description}</p>
      </div>
    ))}
  </div>
</section>
---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const services = [
  {
    title: "Mini-Split Troubleshooting",
    description: "Expert diagnosis and repair solutions for all mini-split issues"
  },
  {
    title: "Mini-Split AC Repair",
    description: "Fast, reliable repairs for your ductless cooling system"
  },
  {
    title: "Mini-Split Heat Pump Repair",
    description: "Comprehensive repair services for heating and cooling functions"
  },
  {
    title: "Emergency Repair Services",
    description: "24/7 emergency repairs when you need them most"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Mini-Split Repair Services</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Mini-Split Repair Services" class="w-full h-64 object-cover" />
    </div>
  )}

  <div class="grid md:grid-cols-2 gap-6">
    {services.map(service => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
        <p class="text-gray-600">{service.description}</p>
      </div>
    ))}
  </div>
</section>
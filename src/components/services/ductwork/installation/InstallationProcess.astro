---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const steps = [
  {
    title: "Initial Consultation",
    description: "We evaluate your space and HVAC needs to design the ideal duct system"
  },
  {
    title: "Custom Design",
    description: "Creating a tailored ductwork layout for optimal airflow"
  },
  {
    title: "Professional Installation",
    description: "Expert installation using high-quality materials"
  },
  {
    title: "Testing & Verification",
    description: "Comprehensive testing to ensure proper airflow and efficiency"
  },
  {
    title: "Final Inspection",
    description: "Quality assurance check and system optimization"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Duct Installation Process</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Duct Installation Process" class="w-full h-64 object-cover" />
    </div>
  )}
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {steps.map((step, index) => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="text-primary text-2xl font-bold mb-3">Step {index + 1}</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{step.title}</h3>
        <p class="text-gray-600">{step.description}</p>
      </div>
    ))}
  </div>
</section>
---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const services = [
  {
    title: "Residential Duct Installation",
    description: "Custom ductwork solutions for homes of all sizes",
    features: [
      "Energy-efficient designs",
      "Custom layouts",
      "Professional installation",
      "Quality materials"
    ]
  },
  {
    title: "Commercial Duct Installation",
    description: "Large-scale ductwork for businesses and facilities",
    features: [
      "High-capacity systems",
      "Code compliance",
      "Minimal disruption",
      "Expert installation"
    ]
  },
  {
    title: "New Construction Installation",
    description: "Complete ductwork systems for new buildings",
    features: [
      "Integrated design",
      "Optimal efficiency",
      "Future-ready solutions",
      "Professional planning"
    ]
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Duct Installation Services</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Professional Duct Installation" class="w-full h-64 object-cover" />
    </div>
  )}

  <div class="grid md:grid-cols-3 gap-6">
    {services.map(service => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
        <p class="text-gray-600 mb-4">{service.description}</p>
        <ul class="space-y-2">
          {service.features.map(feature => (
            <li class="flex items-center text-gray-600">
              <svg class="h-5 w-5 text-primary mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              {feature}
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
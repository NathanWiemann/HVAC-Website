---
const signs = [
  {
    title: "Inconsistent Temperatures",
    description: "Different rooms have varying temperatures"
  },
  {
    title: "High Energy Bills",
    description: "Unexplained increases in heating/cooling costs"
  },
  {
    title: "Poor Airflow",
    description: "Weak air flow from vents or registers"
  },
  {
    title: "Unusual Noises",
    description: "Whistling or rattling sounds from ductwork"
  },
  {
    title: "Visible Damage",
    description: "Visible tears, gaps, or disconnected sections"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Signs You Need Duct Repair</h2>
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {signs.map(sign => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{sign.title}</h3>
        <p class="text-gray-600">{sign.description}</p>
      </div>
    ))}
  </div>
</section>
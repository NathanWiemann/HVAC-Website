---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const services = [
  {
    title: "Duct Inspection",
    description: "Thorough assessment to identify potential issues before they become problems"
  },
  {
    title: "Air Duct Maintenance",
    description: "Comprehensive care to ensure optimal system performance"
  },
  {
    title: "Routine Maintenance",
    description: "Regular service to keep your system in peak condition"
  },
  {
    title: "Duct Sealing",
    description: "Professional sealing to prevent air leaks and improve efficiency"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Duct Maintenance Services</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Duct Maintenance Services" class="w-full h-64 object-cover" />
    </div>
  )}

  <div class="grid md:grid-cols-2 gap-6">
    {services.map(service => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
        <p class="text-gray-600">{service.description}</p>
      </div>
    ))}
  </div>
</section>
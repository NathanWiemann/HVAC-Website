---
const signs = [
  {
    title: "Visible Dust",
    description: "Dust or debris around vents and registers"
  },
  {
    title: "Poor Air Quality",
    description: "Increased allergies or respiratory issues"
  },
  {
    title: "Musty Odors",
    description: "Unpleasant smells from your vents"
  },
  {
    title: "Reduced Airflow",
    description: "Weak air circulation from vents"
  },
  {
    title: "Higher Energy Bills",
    description: "Increased costs due to reduced efficiency"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Signs You Need Duct Cleaning</h2>
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {signs.map(sign => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{sign.title}</h3>
        <p class="text-gray-600">{sign.description}</p>
      </div>
    ))}
  </div>
</section>
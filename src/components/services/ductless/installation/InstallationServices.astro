---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const services = [
  {
    title: "Ductless Air Conditioning Installation",
    description: "Stay cool with professional ductless AC installation, perfect for single rooms or entire properties."
  },
  {
    title: "Ductless Heat Pump Installation",
    description: "Enjoy year-round comfort with energy-efficient heat pump solutions."
  },
  {
    title: "Residential Ductless HVAC",
    description: "Upgrade your home's comfort with quiet, efficient operation."
  },
  {
    title: "Commercial Ductless Systems",
    description: "Tailored solutions for offices, retail spaces, and more."
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Ductless HVAC Installation Services</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Ductless HVAC Installation Services" class="w-full h-64 object-cover" />
    </div>
  )}

  <div class="grid md:grid-cols-2 gap-6">
    {services.map(service => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
        <p class="text-gray-600">{service.description}</p>
      </div>
    ))}
  </div>
</section>
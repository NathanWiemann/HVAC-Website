---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const services = [
  {
    title: "Ductless HVAC Check-Up",
    description: "Regular system checks to identify potential issues early"
  },
  {
    title: "Mini-Split Preventative Check",
    description: "Comprehensive inspections for efficient year-round operation"
  },
  {
    title: "System Efficiency Check",
    description: "Optimize performance to reduce energy consumption"
  },
  {
    title: "Performance Tune-Up",
    description: "Detailed adjustments to maximize system efficiency"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Preventative Maintenance Services</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Ductless HVAC Maintenance Services" class="w-full h-64 object-cover" />
    </div>
  )}

  <div class="grid md:grid-cols-2 gap-6">
    {services.map(service => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
        <p class="text-gray-600">{service.description}</p>
      </div>
    ))}
  </div>
</section>
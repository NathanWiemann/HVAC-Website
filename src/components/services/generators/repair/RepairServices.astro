---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const services = [
  {
    title: "Emergency Generator Repair",
    description: "24/7 emergency services for urgent generator issues"
  },
  {
    title: "Portable Generator Repair",
    description: "Expert repair for smaller residential and commercial units"
  },
  {
    title: "Whole House Generator Repair",
    description: "Comprehensive solutions for standby generator systems"
  },
  {
    title: "Commercial Generator Repair",
    description: "Specialized repair services for high-capacity systems"
  },
  {
    title: "Backup Generator Repair",
    description: "Fast repair services for standby power systems"
  },
  {
    title: "Generator Troubleshooting",
    description: "Diagnostic services to identify and resolve issues"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Generator Repair Services</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Generator Repair Services" class="w-full h-64 object-cover" />
    </div>
  )}

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {services.map(service => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
        <p class="text-gray-600">{service.description}</p>
      </div>
    ))}
  </div>
</section>
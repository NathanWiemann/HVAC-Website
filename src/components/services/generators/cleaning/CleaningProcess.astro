---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const steps = [
  {
    title: "Initial Assessment",
    description: "Detailed inspection of your generator's condition"
  },
  {
    title: "Comprehensive Cleaning",
    description: "Thorough cleaning of all components"
  },
  {
    title: "System Testing",
    description: "Verification of proper operation after cleaning"
  },
  {
    title: "Maintenance Recommendations",
    description: "Guidance for ongoing care and maintenance"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Generator Cleaning Process</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Generator Cleaning Process" class="w-full h-64 object-cover" />
    </div>
  )}
  
  <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
    {steps.map((step, index) => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="text-primary text-2xl font-bold mb-3">Step {index + 1}</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{step.title}</h3>
        <p class="text-gray-600">{step.description}</p>
      </div>
    ))}
  </div>
</section>
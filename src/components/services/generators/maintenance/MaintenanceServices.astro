---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const services = [
  {
    title: "Residential Generator Maintenance",
    description: "Regular maintenance services for home generator systems"
  },
  {
    title: "Commercial Generator Check-Ups",
    description: "Comprehensive maintenance for business power systems"
  },
  {
    title: "Backup Generator Maintenance",
    description: "Expert care for standby and backup generators"
  },
  {
    title: "Gas & Diesel Generator Service",
    description: "Specialized maintenance for different fuel types"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Generator Preventative Maintenance Services</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Generator Maintenance Services" class="w-full h-64 object-cover" />
    </div>
  )}

  <div class="grid md:grid-cols-2 gap-6">
    {services.map(service => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{service.title}</h3>
        <p class="text-gray-600">{service.description}</p>
      </div>
    ))}
  </div>
</section>
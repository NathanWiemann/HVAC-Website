---
interface Props {
  image?: string;
}

const { image } = Astro.props;

const steps = [
  {
    title: "Initial Assessment",
    description: "We evaluate your system's current condition"
  },
  {
    title: "Comprehensive Maintenance",
    description: "Complete generator maintenance check and cleaning"
  },
  {
    title: "System Testing",
    description: "Performance testing to ensure optimal operation"
  },
  {
    title: "Ongoing Support",
    description: "Recommendations for future care and maintenance plans"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Preventative Maintenance Process</h2>

  {image && (
    <div class="mb-8 rounded-lg overflow-hidden">
      <img src={image} alt="Generator Maintenance Process" class="w-full h-64 object-cover" />
    </div>
  )}
  
  <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
    {steps.map((step, index) => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="text-primary text-2xl font-bold mb-3">Step {index + 1}</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{step.title}</h3>
        <p class="text-gray-600">{step.description}</p>
      </div>
    ))}
  </div>
</section>
---
const signs = [
  {
    title: "Slow Start or Failure to Start",
    description: "Indicates the need for a tune-up or inspection"
  },
  {
    title: "Inconsistent Performance",
    description: "Fluctuating power output or frequent interruptions"
  },
  {
    title: "Strange Noises or Smells",
    description: "May indicate engine issues or fuel line problems"
  },
  {
    title: "Error Codes or Alerts",
    description: "System warnings indicating potential issues"
  },
  {
    title: "Overdue Maintenance",
    description: "If it's been over a year since your last check-up"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">Signs You Need a Generator Preventative Check</h2>
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {signs.map(sign => (
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">{sign.title}</h3>
        <p class="text-gray-600">{sign.description}</p>
      </div>
    ))}
  </div>
</section>
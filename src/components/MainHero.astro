---
import { getDisplayPhone, getTelLink } from '../utils/phone';

interface Props {
  heroImage?: string;
}

const { heroImage = "https://github.com/NathanWiemann/HVAC-Website/blob/master/public/images/hero-hvac-technicians.jpg?raw=true" } = Astro.props;

const highlights = [
  "24/7 Emergency HVAC Services",
  "Serving All of Berks County, PA", 
  "Energy-Efficient Upgrades to Lower Utility Bills",
  "Licensed, Insured, and Trusted by Your Neighbors"
];
---

<div class="relative bg-gray-900 py-24">
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-black opacity-60 z-10"></div>
    <img 
      class="w-full h-full object-cover"
      src={heroImage}
      alt="HVAC Service in Berks County"
    />
  </div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 z-20">
    <div class="max-w-[65%]">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-white mb-4">
        Reliable Heating & Cooling Solutions for Berks County Homes and Businesses
      </h1>
      <p class="text-xl text-gray-100 mb-6">
        Your Comfort Is Our Priority—Expert HVAC Repairs, Installations, and Maintenance You Can Trust.
      </p>
      
      <ul class="mb-8 space-y-2">
        {highlights.map(item => (
          <li class="flex items-center text-gray-100">
            <svg class="h-5 w-5 text-accent mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            {item}
          </li>
        ))}
      </ul>

      <p class="text-lg text-gray-100 font-medium mb-6">
        Don't Wait—Stay Comfortable Year-Round! Schedule Your Service Today.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="/estimate" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary bg-white hover:bg-gray-50">
          Request a Free Quote
        </a>
        <a href={getTelLink()} class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
          </svg>
          Call Now: {getDisplayPhone()}
        </a>
      </div>
    </div>
  </div>
</div>
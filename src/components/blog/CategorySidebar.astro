---
interface Props {
  categories: string[];
  currentCategory?: string;
}

const { categories, currentCategory } = Astro.props;
---

<aside class="w-64 pr-8">
  <h2 class="text-xl font-bold text-gray-900 mb-4">Categories</h2>
  <nav>
    <ul class="space-y-2">
      <li>
        <a 
          href="/blog" 
          class={`block px-3 py-2 rounded-md ${!currentCategory ? 'bg-primary text-white' : 'text-gray-600 hover:bg-gray-100'}`}
        >
          All Posts
        </a>
      </li>
      {categories.map(category => (
        <li>
          <a 
            href={`/blog/category/${category.toLowerCase()}`}
            class={`block px-3 py-2 rounded-md ${currentCategory?.toLowerCase() === category.toLowerCase() ? 'bg-primary text-white' : 'text-gray-600 hover:bg-gray-100'}`}
          >
            {category}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</aside>
---
interface Props {
  phone: string;
}

const { phone } = Astro.props;

const contactInfo = [
  {
    title: "Phone",
    value: phone,
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />`,
    link: `tel:${phone}`
  },
  {
    title: "Email",
    value: "contact@berkscountyhvac.com",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`,
    link: "mailto:contact@berkscountyhvac.com"
  },
  {
    title: "Hours",
    value: "24/7 Emergency Service Available",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`,
    link: null
  },
  {
    title: "Service Area",
    value: "Serving All of Berks County, PA",
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />`,
    link: "/locations"
  }
];
---

<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
  {contactInfo.map(info => (
    <div class="bg-white p-6 rounded-lg shadow-md">
      <div class="flex items-center mb-4">
        <div class="bg-primary p-2 rounded-full mr-3">
          <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={info.icon} />
        </div>
        <h3 class="text-lg font-semibold text-gray-900">{info.title}</h3>
      </div>
      {info.link ? (
        <a href={info.link} class="text-gray-600 hover:text-primary">{info.value}</a>
      ) : (
        <p class="text-gray-600">{info.value}</p>
      )}
    </div>
  ))}
</div>
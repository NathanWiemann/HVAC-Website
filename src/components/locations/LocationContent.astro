---
interface Props {
  name: string;
  phone: string;
}

const { name, phone } = Astro.props;
---

<section class="mb-16">
  <div class="prose max-w-none">
    <h2 class="text-3xl font-bold text-gray-900 mb-6">HVAC Services in {name}, PA</h2>
    <p class="text-lg text-gray-600 mb-8">
      We provide comprehensive HVAC services to homes and businesses in {name} and surrounding areas. From heating and cooling installation to maintenance and repairs, our team of certified technicians delivers reliable solutions tailored to your needs.
    </p>
    
    <div class="grid md:grid-cols-2 gap-8 mb-12">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Cooling Services</h3>
        <ul class="space-y-2">
          <li>Air Conditioning Installation</li>
          <li>AC Repair & Maintenance</li>
          <li>Ductless Mini-Split Systems</li>
          <li>24/7 Emergency Service</li>
        </ul>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Heating Services</h3>
        <ul class="space-y-2">
          <li>Furnace Installation & Repair</li>
          <li>Boiler Services</li>
          <li>Heat Pump Systems</li>
          <li>Preventative Maintenance</li>
        </ul>
      </div>
    </div>

    <div class="text-center mt-8">
      <a href={`tel:${phone}`} class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-secondary">
        <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        Call Now for Service in {name}: {phone}
      </a>
    </div>
  </div>
</section>
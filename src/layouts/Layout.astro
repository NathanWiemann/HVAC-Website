---
import { getDisplayPhone, getTelLink } from '../utils/phone';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;

const services = [
  {
    category: "Cooling Services",
    links: [
      { name: "AC Repair", url: "/services/cooling/ac-repair" },
      { name: "AC Installation", url: "/services/cooling/ac-installation" },
      { name: "AC Maintenance", url: "/services/cooling/maintenance" },
      { name: "AC Cleaning", url: "/services/cooling/cleaning" },
      { name: "AC Add-Ons", url: "/services/cooling/add-ons" }
    ]
  },
  {
    category: "Heating Services",
    links: [
      { name: "Heating Repair", url: "/services/heating/repair" },
      { name: "Heating Installation", url: "/services/heating/installation" },
      { name: "Boiler Services", url: "/services/heating/boilers" },
      { name: "Furnace Services", url: "/services/heating/furnaces" },
      { name: "Heat Pump Services", url: "/services/heating/heat-pumps" }
    ]
  },
  {
    category: "Other Services",
    links: [
      { name: "Ductwork Services", url: "/services/ductwork" },
      { name: "Generator Services", url: "/services/generators" },
      { name: "Mini-Split Services", url: "/services/mini-split" },
      { name: "Ductless HVAC Services", url: "/services/ductless" }
    ]
  }
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Berks County HVAC</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-sm fixed w-full top-0 z-50">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <a href="/" class="flex items-center">
              <span class="text-2xl font-bold text-primary">Berks County HVAC</span>
            </a>
          </div>
          <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
            <a href="/" class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-900">Home</a>
            
            <!-- Services Dropdown -->
            <div class="relative group inline-flex items-center">
              <button class="inline-flex items-center h-full text-sm font-medium text-gray-500 hover:text-gray-900">
                <span class="pt-1">Services</span>
                <svg class="ml-1 h-4 w-4 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              
              <!-- Dropdown Menu -->
              <div class="absolute left-0 mt-2 w-72 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 top-full">
                <div class="p-4 grid gap-4">
                  {services.map(category => (
                    <div>
                      <h3 class="font-semibold text-gray-900 mb-2">{category.category}</h3>
                      <div class="grid gap-2">
                        {category.links.map(link => (
                          <a 
                            href={link.url}
                            class="text-sm text-gray-600 hover:text-primary hover:bg-gray-50 px-2 py-1 rounded-md transition-colors"
                          >
                            {link.name}
                          </a>
                        ))}
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
            
            <a href="/locations" class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-gray-900">Locations</a>
            <a href="/blog" class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-gray-900">Blog</a>
            <a href="/contact" class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-gray-900">Contact</a>
          </div>
          <div class="flex items-center space-x-4">
            <a href={getTelLink()} class="hidden md:inline-flex items-center text-primary hover:text-secondary">
              <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {getDisplayPhone()}
            </a>
            <a href="/contact" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
              Free Quote
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="pt-16">
      <slot />
    </main>

    <footer class="bg-gray-900 text-white mt-12">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">Contact Us</h3>
            <p>Phone: {getDisplayPhone()}</p>
            <p>Email: contact@berkscountyhvac.com</p>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="/services" class="hover:text-accent">Services</a></li>
              <li><a href="/locations" class="hover:text-accent">Locations</a></li>
              <li><a href="/contact" class="hover:text-accent">Contact</a></li>
              <li><a href="/privacy-policy" class="hover:text-accent">Privacy Policy</a></li>
              <li><a href="/terms" class="hover:text-accent">Terms & Conditions</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Service Area</h3>
            <p>Proudly serving Berks County and surrounding areas</p>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-700 text-center">
          <p>&copy; {new Date().getFullYear()} Berks County HVAC. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
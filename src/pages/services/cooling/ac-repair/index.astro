import QuoteSection from '../../../../components/QuoteSection/index.astro';
import MainContent from '../../../../components/services/cooling/repair/MainContent.astro';
import RepairSigns from '../../../../components/services/cooling/repair/RepairSigns.astro';
import WhyChooseUs from '../../../../components/services/cooling/repair/WhyChooseUs.astro';
import RepairServices from '../../../../components/services/cooling/repair/RepairServices.astro';
import MaintenanceSection from '../../../../components/services/cooling/repair/MaintenanceSection.astro';

---
import Layout from '../../../../layouts/Layout.astro';
import Hero from '../../../../components/Hero.astro';
import QuoteSection from '../../../../components/QuoteSection/index.astro';
import MainContent from '../../../../components/services/ductwork/installation/MainContent.astro';
import ServiceTypes from '../../../../components/services/ductwork/installation/ServiceTypes.astro';
import Benefits from '../../../../components/services/ductwork/installation/Benefits.astro';
import WhyChooseUs from '../../../../components/services/ductwork/installation/WhyChooseUs.astro';
import InstallationProcess from '../../../../components/services/ductwork/installation/InstallationProcess.astro';
import WarningSigns from '../../../../components/services/ductwork/installation/WarningSigns.astro';
import ContactForm from '../../../../components/ContactForm.astro';
import FAQ from '../../../../components/services/ductwork/installation/FAQ.astro';
import ServiceAreas from '../../../../components/services/ductwork/installation/ServiceAreas.astro';
import CTASection from '../../../../components/CTASection.astro';

const phone = "1-234-567-8900";

// High-quality ductwork installation images
const heroImage = "https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80";
const installationImage = "https://images.unsplash.com/photo-1621905252507-b35492cc74b4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2069&q=80";
const serviceImage = "https://images.unsplash.com/photo-1599839575945-a9e5af0c3fa5?ixlib=rb-4.0.3&auto=format&fit=crop&w=2069&q=80";
---

<Layout
  title="Duct Installation Services in Berks County, PA"
  description="Professional ductwork installation services for optimal airflow and efficiency. Expert installation by certified technicians throughout Berks County."
>
  <Hero
    title="Duct Installation Services in Berks County, PA"
    description="Seamless Ductwork Solutions for Homes and Businesses"
    image={heroImage}
  />

  <QuoteSection phone={phone} />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <MainContent phone={phone} />
    <ServiceTypes image={installationImage} />
    <Benefits />
    <WhyChooseUs />
    <InstallationProcess image={serviceImage} />
    <WarningSigns />
    <ContactForm 
      title="Schedule Your Duct Installation Today"
      subtitle="Get Started with Professional Ductwork Installation"
      phone={phone}
    />
    <FAQ />
    <ServiceAreas />
    
    <CTASection
      title="Experience Better Airflow with Professional Duct Installation"
      description="Don't let poorly designed ductwork compromise your comfort. Contact us today for expert installation services."
      buttonText="Schedule Installation"
      buttonLink="/contact"
    />
  </div>
</Layout>
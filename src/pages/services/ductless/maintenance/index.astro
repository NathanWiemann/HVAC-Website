---
import Layout from '../../../../layouts/Layout.astro';
import Hero from '../../../../components/Hero.astro';
import QuoteSection from '../../../../components/QuoteSection/index.astro';
import MainContent from '../../../../components/services/ductless/maintenance/MainContent.astro';
import MaintenanceServices from '../../../../components/services/ductless/maintenance/MaintenanceServices.astro';
import Benefits from '../../../../components/services/ductless/maintenance/Benefits.astro';
import WarningSigns from '../../../../components/services/ductless/maintenance/WarningSigns.astro';
import MaintenanceProcess from '../../../../components/services/ductless/maintenance/MaintenanceProcess.astro';
import ContactForm from '../../../../components/ContactForm.astro';
import FAQ from '../../../../components/services/ductless/maintenance/FAQ.astro';
import ServiceAreas from '../../../../components/ServiceAreas/index.astro';
import CTASection from '../../../../components/CTASection.astro';

const phone = "1-234-567-8900";

// High-quality ductless HVAC maintenance images
const heroImage = "https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80";
const maintenanceImage = "https://images.unsplash.com/photo-1621905252507-b35492cc74b4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2069&q=80";
const processImage = "https://images.unsplash.com/photo-1599839575945-a9e5af0c3fa5?ixlib=rb-4.0.3&auto=format&fit=crop&w=2069&q=80";
---

<Layout
  title="Ductless HVAC Preventative Maintenance in Berks County, PA"
  description="Professional ductless HVAC maintenance services to ensure optimal performance. Expert preventative care by certified technicians throughout Berks County."
>
  <Hero
    title="Ductless HVAC Preventative Maintenance in Berks County, PA"
    description="Extend the Life of Your System with Regular Preventative Checks"
    image={heroImage}
  />

  <QuoteSection phone={phone} />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <MainContent phone={phone} />
    <MaintenanceServices image={maintenanceImage} />
    <Benefits />
    <WarningSigns />
    <MaintenanceProcess image={processImage} />
    <ContactForm 
      title="Schedule Your Preventative Maintenance"
      subtitle="Keep Your System Running Efficiently"
      phone={phone}
    />
    <FAQ />
    <ServiceAreas />
    
    <CTASection
      title="Keep Your Ductless HVAC System in Peak Condition"
      description="Don't wait for issues to arise. Contact us today for professional preventative maintenance!"
      buttonText="Schedule Maintenance"
      buttonLink="/contact"
    />
  </div>
</Layout>
---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ContactInfo from '../components/contact/ContactInfo.astro';
import ContactForm from '../components/contact/ContactForm.astro';
import ServiceAreas from '../components/ServiceAreas/index.astro';
import CTASection from '../components/CTASection.astro';
import { getDisplayPhone, getTelLink } from '../utils/phone';
---

<Layout
  title="Contact Us | HVAC Services in Berks County"
  description="Contact Berks County HVAC for professional heating and cooling services. Available 24/7 for emergency service throughout Berks County."
>
  <Hero
    title="Contact Us"
    description="Get in Touch for Expert HVAC Solutions"
    image="https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80"
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Get in Touch</h2>
      <p class="text-lg text-gray-600 mb-8">
        Whether you need installation, repair, or maintenance services, our team is here to help. Contact us today for professional HVAC solutions tailored to your needs.
      </p>
      
      <ContactInfo />
    </div>

    <div class="mb-16">
      <ContactForm />
    </div>

    <ServiceAreas />
    
    <CTASection
      title="Emergency Service Available 24/7"
      description="Don't wait when you need urgent HVAC service. Contact us now for immediate assistance!"
      buttonText="Call Now"
      buttonLink={getTelLink()}
    />
  </div>
</Layout>